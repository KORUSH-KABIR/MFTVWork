<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg"
    tools:context=".SecondExercises.BaseActivity"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/baseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_background_4" />

        <LinearLayout
            android:id="@+id/logoLayout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                fontPath="bebas.ttf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="L"
                android:textColor="@color/gray500"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                fontPath="bebas.ttf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="O"
                android:textColor="@color/gray100"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                fontPath="bebas.ttf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="G"
                android:textColor="@color/gray500"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                fontPath="bebas.ttf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="O"
                android:textColor="@color/gray100"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtWelcome"
            fontPath="cinzel_bold.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Welcome"
            android:textColor="@color/gray200"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtInfo"
            fontPath="exo2_light.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtWelcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="#5a000000"
            android:gravity="center"
            android:padding="5dp"
            android:text="To run this application, having an account is mandatory.\n\nSo, in order to continue the application, first log in to your account."
            android:textColor="@color/gray400"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSelect"
            fontPath="exo2_light.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layoutButtons"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Please login to your account"
            android:textColor="@color/gray200"
            android:textSize="21sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnRegister"
                fontPath="exo2_light.otf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_register"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:text="Register"
                android:textColor="@color/gray100"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnLogin"
                fontPath="exo2_light.otf"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_login"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:text="Login"
                android:textColor="@color/gray100"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_background_1" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtLogin"
            fontPath="cinzel_bold.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="LOGIN"
            android:textColor="@color/gray200"
            android:textSize="50sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="70dp"
            android:id="@+id/layoutEditText"
            android:layout_below="@+id/txtLogin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                fontPath="exo2_light.otf"
                android:background="@drawable/background_edit_text"
                android:padding="15dp"
                android:textSize="20sp"
                android:hint="Enter Your Username"
                android:textColorHint="@color/gray500"
                android:textColor="@color/gray200"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatEditText
                fontPath="exo2_light.otf"
                android:background="@drawable/background_edit_text"
                android:padding="15dp"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Your Password"
                android:textColorHint="@color/gray500"
                android:textColor="@color/gray200"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatCheckBox
            fontPath="exo2_light.otf"
            android:id="@+id/chb_remember"
            android:layout_below="@+id/layoutEditText"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Remember Me"
            android:textSize="18sp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp" />

        <android.support.v7.widget.AppCompatButton
            android:textColor="@color/gray100"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/btnLoginLayout"
            android:layout_alignParentBottom="true"
            fontPath="exo2_light.otf"
            android:background="@drawable/selector_button_login"
            android:layout_margin="20dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="2dp"
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_background_3" />


    </RelativeLayout>

</FrameLayout>