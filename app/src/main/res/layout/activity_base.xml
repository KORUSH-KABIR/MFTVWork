<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg"
    tools:context=".SecondExercises.BaseActivity"
    tools:ignore="MissingPrefix">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_bg_4" />

    <LinearLayout
        android:id="@+id/logoLayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            fontPath="bebas.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="L"
            android:textColor="@color/gray500"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            fontPath="bebas.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="O"
            android:textColor="@color/gray100"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            fontPath="bebas.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="G"
            android:textColor="@color/gray500"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            fontPath="bebas.ttf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="O"
            android:textColor="@color/gray100"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtWelcome"
        fontPath="cinzel_bold.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Welcome"
        android:textColor="@color/gray200"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtInfo"
        fontPath="exo2_light.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#5a000000"
        android:gravity="center"
        android:padding="5dp"
        android:text="Hello!\n\nYou must be logged in to continue to work"
        android:textColor="@color/gray400"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSelect"
        fontPath="exo2_light.otf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutButtons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Please Select a Button"
        android:textColor="@color/gray200"
        android:textSize="21sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            fontPath="exo2_light.otf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_register"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:text="Register"
            android:textColor="@color/gray100"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            fontPath="exo2_light.otf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_login"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:text="Login"
            android:textColor="@color/gray100"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>